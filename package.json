{
  "name": "@passlock/shared",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "author": {
    "name": "Toby Hobson",
    "email": "toby@passlock.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/passlock-dev/passkeys",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./error": "./dist/error/error.js",
    "./schema": "./dist/schema/schema.js",
    "./logging": "./dist/logging/logging.js",
    "./event": "./dist/event.js",
    "./src/": "./src/"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite --host --open",
    "test": "vitest",
    "test:ui": "vitest --coverage.enabled=true --ui",
    "coverage": "vitest run --coverage",
    "build": "pnpm run clean && tsc",
    "watch": "tsc && vite build --watch",
    "typecheck": "tsc -noEmit",
    "lint": "eslint --ext .ts src",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write \"src/**/*.+(js|ts|json)\""
  },
  "dependencies": {
    "@effect/schema": "^0.60.4",
    "effect": "2.1.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-check": "^3.15.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
