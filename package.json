{
  "name": "@passlock/shared",
  "version": "0.9.0",
  "description": "Shared code use by Passlock frontend libraries & backend SDKs",
  "keywords": [
    "passlock"
  ],
  "author": {
    "name": "Toby Hobson",
    "email": "toby@passlock.dev"
  },
  "license": "MIT",
  "homepage": "https://github.com/passlock-dev/shared",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "tsc --build --clean",
    "test": "vitest run",
    "test:watch": "vitest dev",
    "test:ui": "vitest --coverage.enabled=true --ui",
    "test:coverage": "vitest run --coverage",
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write \"src/**/*.+(js|ts|json)\"",
    "ncu": "ncu",
    "ncu:save": "ncu -u"
  },
  "dependencies": {
    "@effect/rpc": "^0.27.20",
    "@effect/schema": "^0.63.4",
    "valibot": "^0.30.0"
  },
  "peerDependencies": {
    "effect": "2.4.3"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-check": "^3.16.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  }
}
